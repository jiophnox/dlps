{
  "name": "youtube-downloader-bot",
  "version": "2.0.0",
  "description": "YouTube downloader bot",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "build": "mkdir -p bin && curl -L https://github.com/yt-dlp/yt-dlp/releases/latest/download/yt-dlp -o bin/yt-dlp && chmod +x bin/yt-dlp && npm install --production"
  },
  "dependencies": {
    "telegram": "^2.25.11",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "axios": "^1.7.2",
    "youtubei.js": "^10.5.0",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^1.4.1"
  },
  "engines": {
    "node": "18.x"
  }
}
